<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cyrus.final_job.dao.ResumeDao">

    <resultMap type="com.cyrus.final_job.entity.Resume" id="ResumeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="staffNeedsId" column="staff_needs_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="idCard" column="id_card" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ResumeMap">
        select
          id, staff_needs_id, name, phone, email, id_card, url, create_time
        from final_job.resume
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ResumeMap">
        select
          id, staff_needs_id, name, phone, email, id_card, url, create_time
        from final_job.resume
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ResumeMap">
        select
          id, staff_needs_id, name, phone, email, id_card, url, create_time
        from final_job.resume
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="staffNeedsId != null">
                and staff_needs_id = #{staffNeedsId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="idCard != null and idCard != ''">
                and id_card = #{idCard}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into final_job.resume(staff_needs_id, name, phone, email, id_card, url, create_time)
        values (#{staffNeedsId}, #{name}, #{phone}, #{email}, #{idCard}, #{url}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update final_job.resume
        <set>
            <if test="staffNeedsId != null">
                staff_needs_id = #{staffNeedsId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="idCard != null and idCard != ''">
                id_card = #{idCard},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from final_job.resume where id = #{id}
    </delete>

</mapper>